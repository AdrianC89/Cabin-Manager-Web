<%- include("templates/header", 
{tituloWeb: 'Panel de Administración',
}) %>
    
    <div class="admin-container">
        <div class="admin-card">
            <div class="text-center mb-4">
                <img src="images/LogoCabin.png" alt="Logo" width="100">
                <h2 class="mt-3">Menú Principal</h2>
                <% if (user) { %> <!-- Asegúrate de que esta condición esté revisando 'user' -->
                <p class="lead">¡Bienvenido, <%= user.nombre %>!</p> <!-- Muestra el nombre del usuario -->
            <% } else { %>
                <p class="lead">¡Bienvenido!</p>
            <% } %>
            </div>
            
            <div class="list-group">
                <a href="/clientes" class="list-group-item list-group-item-action">
                    <i class="fas fa-users"></i> Gestionar Clientes
                </a>
                <a href="/cabanas" class="list-group-item list-group-item-action">
                    <i class="fas fa-home"></i> Gestionar Cabañas
                </a>
                <a href="/reservas" class="list-group-item list-group-item-action">
                    <i class="fas fa-calendar-check"></i> Gestionar Reservas
                </a>
                <div class="list-group">
                    <!-- Otras opciones de menú -->
                    <a href="/buscar" class="list-group-item list-group-item-action">
                        <i class="fas fa-search"></i> Sistema de Búsqueda
                    </a>
                    <!-- Otras opciones de menú -->
                </div>
                
                <a href="/logout" class="list-group-item list-group-item-action text-danger">
                    <i class="fas fa-sign-out-alt"></i> Salir
                </a>
                
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<%- include("templates/footer") %>